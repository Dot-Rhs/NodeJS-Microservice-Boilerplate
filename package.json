{
  "name": "node-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "build:release": "npm run clean && npm run format:code && npm run test && tsc -p tsconfig.release.json && npm run copy-env",
    "build:watch": "tsc -w",
    "copy-env": "cp .env.test build/.env.test && cp .env.stage build/.env.stage",
    "clean": "rimraf dist build package coverage tmp logs",
    "docs": "typedoc --entryPoints src/server.ts",
    "format:code": "npm run pretty && npm run lint:fix",
    "start": "nodemon index.js",
    "start:test": "npm run lint && export NODE_ENV=test; ts-node --files src/server.ts",
    "start:staging": "npm run lint && export NODE_ENV=staging; ts-node --files src/server.ts",
    "start:production": "npm run lint && export NODE_ENV=production; ts-node --files src/server.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint --fix",
    "lint:types": "tsc --noEmit",
    "pretty": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "pretty:watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "export NODE_ENV=test; jest --maxWorkers 2",
    "test:coverage": "export NODE_ENV=test; jest --coverage",
    "test:watch": "export NODE_ENV=test; jest --watchAll",
    "test:custom": "export NODE_ENV=test; npm test --",
    "precommit": "npm run lint:fix && npm run pretty",
    "prepush": "npm run lint && npm run test",
    "ncu": "ncu",
    "ncu:update": "ncu -u",
    "docker:build": "docker build . -t nodebackend",
    "docker:setup": "yarn install && yarn docker:build && docker-compose up -d",
    "docker:start": "docker-compose start",
    "docker:stop": "docker-compose stop"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "fast-deep-equal": "3.1.3",
    "fast-shallow-equal": "1.0.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "morgan": "1.10.0",
    "nanoid": "^3.3.3",
    "response-time": "^2.3.2",
    "throttle-debounce": "4.0.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.12",
    "@types/ioredis": "^4.27.8",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.27",
    "@types/pretty-hrtime": "^1.0.1",
    "@types/response-time": "^2.3.5",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.3.9",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^v3.7.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "5.1.1",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.4.0",
    "nodemon": "^2.0.14",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "source-map-support": "^0.5.16",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.1",
    "tslib": "2.3.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.4.4"
  }
}
